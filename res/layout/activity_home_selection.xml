		<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:background="#ffffffff"
		                 android:orientation="vertical">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:layout_width="match_parent"
			              android:layout_height="match_parent"
			              android:orientation="vertical"
			              android:layout_alignParentTop="true"
										android:weightSum="1"
					>
				<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
				    android:id="@+id/pager"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
						android:layout_weight="0.5"/>
				<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
				                                   android:id="@+id/pager1"
				                                   android:layout_width="match_parent"
				                                   android:layout_height="0dp"
				                                   android:layout_weight="0.5"/>
			</LinearLayout>
			<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
			               android:layout_width="match_parent"
			               android:layout_height="60dp"
			               android:orientation="vertical"
			               android:layout_centerHorizontal="true"
			               android:background="#5cb5d9"
			               android:layout_centerVertical="true"
					>

				<ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
				             android:id="@+id/shuffle"
				             android:layout_width="40dp"
				             android:layout_height="40dp"
				             android:layout_weight="1"
				             android:layout_centerVertical="true"
				             android:layout_alignParentLeft="true"
				             android:src="@drawable/shuffle_btn_selector"
				             android:background="#00000000"
				             android:layout_marginLeft="10dp"
						/>
				<CheckBox xmlns:android="http://schemas.android.com/apk/res/android"
				          android:id="@+id/selection"
				          android:layout_width="40dp"
				          android:layout_height="40dp"
				             android:gravity="center"
				             android:layout_centerHorizontal="true"
				             android:layout_centerVertical="true"
				             android:button="@drawable/selection_selector"
				             android:background="#00000000"
						/>
				<CheckBox xmlns:android="http://schemas.android.com/apk/res/android"
				          android:id="@+id/favorite"
				          android:layout_width="40dp"
				             android:layout_height="40dp"
				             android:button="@drawable/favorite_selector"
				             android:gravity="center"
				             android:layout_centerVertical="true"
				             android:layout_alignParentRight="true"
				             android:layout_marginRight="10dp"
				             android:background="#00000000"
						/>
			</RelativeLayout>
			<ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
			             android:layout_width="35dp"
			             android:layout_height="35dp"
			             android:src="@drawable/add_btn_selector"
			             android:layout_gravity="center"
			             android:scaleType="centerInside"
			             android:adjustViewBounds="true"
			             android:background="#00000000"
			             android:layout_alignParentTop="true"
			             android:layout_alignParentRight="true"
			             android:onClick="addShirt"
			             android:layout_marginRight="10dp"
			             android:layout_marginTop="10dp"
					/>
			<ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
			             android:layout_width="35dp"
			             android:layout_height="35dp"
			             android:src="@drawable/add_btn_selector"
			             android:layout_gravity="center"
			             android:scaleType="centerInside"
			             android:adjustViewBounds="true"
			             android:background="#00000000"
			             android:layout_alignParentBottom="true"
			             android:onClick="addPant"
			             android:layout_alignParentRight="true"
			             android:layout_marginRight="10dp"
			             android:layout_marginBottom="10dp"
					/>
			<ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
			             android:layout_width="35dp"
			             android:layout_height="35dp"
			             android:src="@drawable/left_menu_btn_selector"
			             android:layout_gravity="center"
			             android:scaleType="centerInside"
			             android:adjustViewBounds="true"
			             android:background="#00000000"
			             android:layout_alignParentTop="true"

			             android:layout_alignParentLeft="true"
			             android:layout_marginLeft="10dp"
			             android:layout_marginTop="10dp"
			             android:onClick="leftMenu"
					/>
		</RelativeLayout>